{
  "name": "windsurf-sneakerbot",
  "version": "0.9.0",
  "description": "WindSurfer SneakerBot - Automated sneaker purchasing tool",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc -p electron/tsconfig.json --watch",
    "dev:react": "cd client && npm run dev",
    "build": "npm run build:electron && npm run build:react",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:react": "cd client && npm run build",
    "package": "electron-builder",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "author": "WindSurfer Team",
  "license": "UNLICENSED",
  "private": true,
  "build": {
    "appId": "com.windsurf.sneakerbot",
    "productName": "WindSurfer SneakerBot",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "client/build/**/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "concurrently": "^8.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "electron-updater": "^6.1.1",
    "pg": "^8.11.3",
    "playwright": "^1.38.0",
    "redis": "^4.6.8"
  }
}
